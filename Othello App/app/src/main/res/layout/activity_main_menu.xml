<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimary"

    tools:context=".Activities.MainMenuActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"

            android:text="@string/app_name"
            android:textSize="56sp"
            android:textColor="@color/white"
            android:fontFamily="cursive"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/play_human"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"

            android:text="Play Against\nPlayer"
            style="@style/MenuButton"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <Button
            android:id="@+id/play_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:text="Play Against\nAI"
            style="@style/MenuButton"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/play_human" />

        <Button
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:text="Settings"
            style="@style/MenuButton"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/play_ai" />

        <ImageView
            android:id="@+id/black_circle_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/black_circle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/white_circle_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/white_circle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/black_circle_1" />

        <ImageView
            android:id="@+id/black_circle_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/black_circle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/white_circle_1" />

        <ImageView
            android:id="@+id/white_circle_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/white_circle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/black_circle_2" />

        <ImageView
            android:id="@+id/black_circle_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/black_circle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/white_circle_2" />

        <ImageView
            android:id="@+id/white_circle_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/white_circle"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/black_circle_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/black_circle"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/white_circle_3"/>

        <ImageView
            android:id="@+id/white_circle_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/white_circle"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/black_circle_4"/>

        <ImageView
            android:id="@+id/black_circle_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/black_circle"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/white_circle_4"/>

        <ImageView
            android:id="@+id/white_circle_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/white_circle"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/black_circle_5"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>